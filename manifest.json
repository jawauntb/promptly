{
  "manifest_version": 3,
  "name": "Promptly",
  "version": "0.0.0.1",
  "description": "AI-Powered Notepad for Browsing the Web",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/todo1.png",
      "48": "images/todo2.png",
      "128": "images/todo3.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "notifications", "tabs", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"]
}
