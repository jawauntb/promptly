{
  "manifest_version": 3,
  "name": "Notenit",
  "version": "0.0.0.9",
  "description": "AI-Powered Notepad for Browsing the Web",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/todo1.png",
      "48": "images/todo1.png",
      "128": "images/todo1.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts.js"]
    }
  ],
  "permissions": ["storage", "tabs", "activeTab", "scripting", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Ctrl+Shift+L"
      }
    },
    "add_to_notenit": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Ctrl+Shift+I"
      },
      "description": "Add content to NoteNit"
    }
  }
}
